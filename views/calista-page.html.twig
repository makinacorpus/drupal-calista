<div id="dashboard">
  {% set classes = ['default', 'success', 'info', 'warning', 'danger'] %}
  {% for id, portlet in portlets %}
    <div id="porlet-{{ machine_name(id) }}" class="portlet col-sm-6 col-xs-12">
      <div class="panel panel-{{ cycle(classes, loop.index0) }}{% if portlet.actions %} with-actions{% endif %}">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ portlet.title }}

            {% if portlet.path %}
              <a class="pull-right" href="{{ url(portlet.path) }}">
                {{ "see all"|t }}
                <span aria-hidden="true" class="glyphicon glyphicon-share-alt"></span>
              </a>
            {% endif %}
          </h3>
        </div>
        <div class="panel-body">
          <div class="scrolling">
            {{ portlet.content }}
          </div>
        </div>
        {% if portlet.actions %}
          <div class="panel-footer text-right">
            {{ calista_actions_raw(portlet.actions) }}
          </div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>
